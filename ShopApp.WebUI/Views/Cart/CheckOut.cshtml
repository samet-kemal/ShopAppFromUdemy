@model OrderModel
@{
    ViewData["Title"] = "CheckOut";
}

<h1>Check Out</h1> 
<hr />
<div class="row">
    <div class="col-md-8">
        <h4 class="mb-3">Order Detaiils</h4>
        <form action="/CheckOut" method="post">
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.FirstName"></label>
                    <input asp-for="@Model.FirstName" class="form-control"  value="" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.LastName"></label>
                    <input asp-for="@Model.LastName" class="form-control"  value="" />
                </div>

            </div>
            <div class="mb-3">
                <label asp-for="@Model.Address"></label>
                <textarea asp-for="@Model.Address" class="form-control"></textarea>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.City"></label>
                    <input asp-for="@Model.City" class="form-control" value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Phone"></label>
                    <input asp-for="@Model.Phone" class="form-control" value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Email"></label>
                    <input asp-for="@Model.Email"class="form-control"value="" />
                </div>
            </div>
            <hr class="mb-4" />
            <div class="custom-control custom-checkbox">
                <input type="checkbox" class="custom-control-input" id="save-info" />
                <label class="custom-control-label" for="save-info">Save Info</label>
            </div>
            <hr class="mb-4" />
            <div class="d-block my-3">
                <div class="custom-control custom-radio">
                    <input id="credit" name="paymentMethod" type="radio" class="custom-control-inline" />
                    <label class="custom-control-label" for="credit">Credit Card</label>
                </div>
                <div class="custom-control custom-radio">
                    <input id="paypal" name="paymentMethod" type="radio" class="custom-control-inline" />
                    <label class="custom-control-label" for="paypal"> EFT</label>
                </div>
            </div>
            <h4 class="mb-3">Payment</h4>
            <div class="row">
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CardName"></label>
                    <input asp-for="@Model.CardName"   value="" />
                </div>
                <div class="col-md-6 mb-3">
                    <label asp-for="@Model.CardNumber"></label>
                    <input asp-for="@Model.CardNumber"  value="" />
                </div>
            </div>
            <div class="row">
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationMonth"></label>

                    <input asp-for="@Model.ExpirationMonth"  value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.ExpirationYear"></label>

                    <input asp-for="@Model.ExpirationYear"  value="" />
                </div>
                <div class="col-md-4 mb-3">
                    <label asp-for="@Model.Cvv"></label>

                    <input asp-for="@Model.Cvv"  value="" />
                </div>
            </div>
            <hr class="mb-4" />
            <button type="submit"class="btn btn-primary btn-lg btn-block">Complete Order</button>
        </form>
    </div>
    <div class="col-md-4 mb-4">
        <h4>
            <span class="text-muted">Your Cart</span>
        </h4>
        <ul class="list-group mb-3">
            @foreach (var item in Model.CartModel.CartItems)
            {
                <li class="list-group-item d-flex justify-content-between">
                    <div>
                        <h6 class="my-0">@item.Name
                        <small>x @item.Quantity</small>
                        </h6>
                    </div>
                    <span class="text-muted">@item.Price</span>
                </li>
            }

            <li class="list-group-item d-flex justify-content-between">
                <span>Total(TL)</span>
                <strong>@Model.CartModel.TotalPrice() TL </strong>
            </li>
        </ul>
    </div>
</div>

